@model BlogSystem.Data.Models.Comment

@{
    ViewBag.Title = "Delete comment";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="blog-gray-info pull-left blog-page-header">@ViewBag.Title</h2>
        </div>
    </div>
</div>

<hr/>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="blog-post-title text-danger">Are you sure you want to delete this comment?</h3>
        </div>
    </div>
</div>

<hr/>


<div class="row">
    <div class="col-md-12">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div data-toggle="collapse" data-target="#commentDetails" class="panel-heading blog-panel-heading">
                    <div class="panel-title">
                        <i class="glyphicon glyphicon-collapse-down"></i>
                        Comment Details
                    </div>
                </div>
                <div id="commentDetails" class="panel-collapse collapse in">
                    <div class="panel-body blog-word-wrap">
                        <ul class="list-unstyled">
                            <li>
                                <strong>Comment Id: </strong>
                                @Html.DisplayFor(model => model.Id)
                            </li>
                            <li>
                                <strong>Blog Title: </strong>
                                <a href="@Url.Action("Post", "Posts", new { area = "Administration", id = Model.PostId })">
                                    @Html.DisplayFor(model => model.Post.Title)
                                </a>
                            </li>
                            <li>
                                <strong>User: </strong>
                                <a href="@Url.Action("Details", "Users", new { area = "Administration", id = Model.UserId })">
                                    @Html.DisplayFor(model => model.User.UserName)
                                </a>
                            </li>
                            <li>
                                <strong>Created On: </strong>
                                @Html.DisplayFor(model => model.CreatedOn)
                            </li>
                            <li>
                                <strong>Modified On: </strong>
                                @Html.DisplayFor(model => model.ModifiedOn)
                            </li>
                            <li>
                                <strong>Is Deleted: </strong>
                                @Html.DisplayFor(model => model.IsDeleted)
                            </li>
                            <li>
                                <strong>Deleted On: </strong>
                                @Html.DisplayFor(model => model.DeletedOn)
                            </li>
                        </ul>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel-group">
                                    <div class="panel panel-default">
                                        <div data-toggle="collapse" data-target="#commentContent" class="panel-heading blog-panel-heading">
                                            <div class="panel-title">
                                                <i class="glyphicon glyphicon-collapse-down"></i>
                                                <strong>Content</strong>
                                            </div>
                                        </div>
                                        <div id="commentContent" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                @Html.DisplayFor(model => model.Content)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger"/>

                @if (Request.UrlReferrer == null)
                {
                    <a href="@Url.Action("Index", "Comments", new { area = "Administration" })" class="btn btn-default">
                        <span>Cancel</span>
                    </a>
                }
                else
                {
                    <a href="@Request.UrlReferrer" class="btn btn-default">
                        <span>Cancel</span>
                    </a>
                }
            </div>
        }

    </div>
</div>

<br/>

<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Index", "Comments", new { area = "Administration" })" class="btn btn-primary">
            <i class="glyphicon glyphicon-align-justify"></i>
            <span>All Comments</span>
        </a>
    </div>
</div>

